<?xml version="1.0" encoding="utf-8"?>
<phpunit colors="true">
  <testsuites>
    <testsuite>
      <directory>./test</directory>
    </testsuite>
  </testsuites>
  <filter>
    <whitelist processUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">./src</directory>
    </whitelist>
  </filter>
  <logging>
    <log type="coverage-clover" target="clover.xml" />
  </logging>
</phpunit>
